<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlv_item_object"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_nameobject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item"
        android:layout_toLeftOf="@+id/txt_number"
        android:layout_toStartOf="@+id/txt_number" />

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/txt_typemeasure"
        android:layout_toStartOf="@+id/txt_typemeasure" />

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/txt_typemeasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_alignParentTop="true" />

</RelativeLayout>